# Production Environment Variables
# META API
# META_ACCESS_TOKEN= (User needs to fill this or use system env)
# META_AD_ACCOUNT_ID= (User needs to fill this)

# AI PROVIDER
AI_PROVIDER=gemini
AI_MODEL_GEMINI=gemini-2.0-flash

# FRONTEND
NEXT_PUBLIC_API_URL=https://ads.nextmedya.com
DOMAIN=ads.nextmedya.com

# ENVIRONMENT
ENVIRONMENT=production

# SECURITY
# JWT_SECRET= (Generate a random string)
CORS_ORIGINS=https://ads.nextmedya.com

# SERVICES
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER:-metaads}:${POSTGRES_PASSWORD:-metaads}@postgres:5432/${POSTGRES_DB:-metaads}
DATABASE_URL_SYNC=postgresql://${POSTGRES_USER:-metaads}:${POSTGRES_PASSWORD:-metaads}@postgres:5432/${POSTGRES_DB:-metaads}

# PATHS
REPORTS_CSV_DIR=/app/data/reports
